<?xml version="1.0"?>
<dc-workflow workflow_id="meetingadviceliege_workflow"
             title="meetingadviceliege_workflow"
             state_variable="review_state"
             initial_state="advice_under_edit"
             xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             i18n:domain="plone">
 <permission>View</permission>
 <permission>Access contents information</permission>
 <permission>Modify portal content</permission>
 <permission>Review portal content</permission>
 <permission>Delete objects</permission>
 <permission>PloneMeeting: Add MeetingFile</permission>
 <permission>PloneMeeting: Add annex</permission>
 <state state_id="advice_given"
        title="advice_given"
        i18n:attributes="title">
  <exit-transition transition_id="backToAdviceUnderEdit"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add MeetingFile"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add annex"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="True">
  </permission-map>
 </state>
 <state state_id="advice_under_edit"
        title="advice_under_edit"
        i18n:attributes="title">
  <exit-transition transition_id="proposeToFinancialController"/>
  <exit-transition transition_id="giveAdvice"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add MeetingFile"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add annex"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="True">
  </permission-map>
 </state>
 <state state_id="financial_advice_signed"
        title="financial_advice_signed"
        i18n:attributes="title">
  <exit-transition transition_id="backToProposedToFinancialManager"/>
  <exit-transition transition_id="giveAdvice"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add MeetingFile"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add annex"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>MeetingManager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="True">
  </permission-map>
 </state>
 <state state_id="proposed_to_financial_controller"
        title="proposed_to_financial_controller"
        i18n:attributes="title">
  <exit-transition transition_id="proposeToFinancialReviewer"/>
  <exit-transition transition_id="giveAdvice"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add MeetingFile"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add annex"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
 </state>
 <state state_id="proposed_to_financial_manager"
        title="proposed_to_financial_manager"
        i18n:attributes="title">
  <exit-transition transition_id="backToProposedToFinancialReviewer"/>
  <exit-transition transition_id="signFinancialAdvice"/>
  <exit-transition transition_id="backToProposedToFinancialController"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add MeetingFile"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add annex"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
 </state>
 <state state_id="proposed_to_financial_reviewer"
        title="proposed_to_financial_reviewer"
        i18n:attributes="title">
  <exit-transition transition_id="backToProposedToFinancialController"/>
  <exit-transition transition_id="proposeToFinancialManager"/>
  <exit-transition transition_id="signFinancialAdvice"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Delete objects"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add MeetingFile"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="PloneMeeting: Add annex"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Review portal content"
                  acquired="False">
   <permission-role>MeetingFinanceEditor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
 </state>
 <transition transition_id="backToAdviceUnderEdit"
             title="backToAdviceUnderEdit"
             new_state="advice_under_edit"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">backToAdviceUnderEdit</action>
  <guard>
    <guard-expression>python:here.mayBackToAdviceUnderEdit()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="backToProposedToFinancialController"
             title="backToProposedToFinancialController"
             new_state="proposed_to_financial_controller"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">backToProposedToFinancialController</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').mayBackToProposedToFinancialController()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="backToProposedToFinancialManager"
             title="backToProposedToFinancialManager"
             new_state="proposed_to_financial_manager"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">backToProposedToFinancialManager</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').mayBackToProposedToFinancialManager()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="backToProposedToFinancialReviewer"
             title="backToProposedToFinancialReviewer"
             new_state="proposed_to_financial_reviewer"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">backToProposedToFinancialReviewer</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').mayBackToProposedToFinancialReviewer()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="giveAdvice"
             title="giveAdvice"
             new_state="advice_given"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">giveAdvice</action>
  <guard>
    <guard-expression>python:here.mayGiveAdvice()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="proposeToFinancialController"
             title="proposeToFinancialController"
             new_state="proposed_to_financial_controller"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">proposeToFinancialController</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').mayProposeToFinancialController()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="proposeToFinancialManager"
             title="proposeToFinancialManager"
             new_state="proposed_to_financial_manager"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">proposeToFinancialManager</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').mayProposeToFinancialManager()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="proposeToFinancialReviewer"
             title="proposeToFinancialReviewer"
             new_state="proposed_to_financial_reviewer"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">proposeToFinancialReviewer</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').mayProposeToFinancialReviewer()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="signFinancialAdvice"
             title="signFinancialAdvice"
             new_state="financial_advice_signed"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" category="workflow" i18n:translate="">signFinancialAdvice</action>
  <guard>
    <guard-expression>python:here.restrictedTraverse('@@advice-wf-conditions').maySignFinancialAdvice()</guard-expression>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
